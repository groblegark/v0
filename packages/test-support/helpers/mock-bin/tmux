#!/usr/bin/env bash
# Mock tmux command for testing
# Behavior controlled by environment variables:
#   MOCK_TMUX_SESSION_EXISTS=true - session exists

case "$1" in
    "has-session")
        if [ "$MOCK_TMUX_SESSION_EXISTS" = "true" ]; then
            exit 0
        fi
        exit 1
        ;;
    "new-session"|"kill-session"|"attach"|"attach-session")
        exit 0
        ;;
    *)
        exit 0
        ;;
esac
